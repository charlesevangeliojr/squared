# Disable directory listing
Options -Indexes

# Block access to dangerous files
<FilesMatch "\.(php|html|js|css|sql|log|txt|conf|bak|old|tmp)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Only allow image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp|ico)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
